@{
  Layout = "_Layout";
}

@using UniversityRegistrar.Models;
@model IEnumerable<UniversityRegistrar.Models.Student>

<h1>Students</h1>

<div class='content'>
  @if (Model.Any())
  {
    <ul>
      @foreach (Student student in Model)
      {
        <li>@Html.ActionLink($"{student.Name}", "Details", new { id = student.StudentId })</li>
      }
    </ul>
  } 
  else
  {
    <h3>No students have been added yet!</h3>
  }
</div>

<div class='links'>
  <p>@Html.ActionLink("Add new student", "Create")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>
