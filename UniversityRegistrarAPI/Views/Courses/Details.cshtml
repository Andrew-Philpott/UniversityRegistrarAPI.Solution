@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Course;

<h1>Course Details</h1>

<div class='content'>
  <h2>@($"{Model.Name}, {Model.Number}")</h2>

  @if(@Model.Students.Count == 0)
  {
    <p>There are no students enrolled in this course</p>
  }
  else
  {
    <h4>Students:</h4>
    <ul>
    @foreach(var student in ViewBag.Students)
    {
      <li>@student.Name</li>
    }
    </ul>
  }
</div>

<div class='links'>
  <p>@Html.ActionLink("Back to course list", "Index")
  <p>@Html.ActionLink("Delete Course", "Delete", new { id = Model.CourseId })
  <p>@Html.ActionLink("Add Student", "AddStudent", new { id = Model.CourseId })</p>
</div>